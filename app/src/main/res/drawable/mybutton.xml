<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="19dip" />
            <stroke android:width="1dip" android:color="@color/google_button_color" />
            <gradient android:angle="-90" android:startColor="@color/google_button_color" android:endColor="@color/google_button_color"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="19dip" />
            <stroke android:width="1dip" android:color="@color/google_button_color" />
            <solid android:color="#85587A"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="19dip" />
            <stroke android:width="1dip" android:color="@color/google_button_color" />
            <gradient android:angle="-90" android:startColor="#BA8DB8" android:endColor="@color/google_button_color" />
        </shape>
    </item>
</selector>