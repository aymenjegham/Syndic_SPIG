<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/itemlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/large_intrinsic_padding">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonaccepted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:visibility="gone"
        app:backgroundTint="@color/com_facebook_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_check_white_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonrefused"
        android:layout_width="wrap_content"
        android:layout_height="201dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:visibility="gone"
        app:backgroundTint="@color/google_button_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_close_white_24dp" />

    <TextView
        android:id="@+id/mobilenodetail"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toEndOf="@+id/photoImageViewdetail"
        app:layout_constraintTop_toBottomOf="@+id/matriculeresidencedetail"
        tools:text="Vosges" />

    <TextView
        android:id="@+id/residencedetail"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toEndOf="@+id/matriculeresidencedetail"
        app:layout_constraintTop_toBottomOf="@+id/nameTextViewdetail"
        tools:text="Vosges" />

    <com.gst.socialcomponents.views.CircularImageView
        android:id="@+id/photoImageViewdetail"
        android:layout_width="@dimen/post_author_image_side"
        android:layout_height="@dimen/post_author_image_side"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:transitionName="@string/post_author_image_transition_name"
        app:border="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shadow="false"
        app:shadow_radius="@dimen/circle_image_shadow_radius"
        tools:src="@drawable/ic_stub"
        tools:targetApi="lollipop" />

    <TextView
        android:id="@+id/nameTextViewdetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.Title"
        app:layout_constraintStart_toEndOf="@+id/photoImageViewdetail"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="John Smith " />

    <TextView
        android:id="@+id/matriculeresidencedetail"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toEndOf="@+id/photoImageViewdetail"
        app:layout_constraintTop_toBottomOf="@+id/nameTextViewdetail"
        tools:text="0124585" />

</android.support.constraint.ConstraintLayout>
